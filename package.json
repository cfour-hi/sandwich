    "lint-staged": "^9.4.3",
    "prettier": "^1.19.1",
    "svg-sprite-loader": "^4.1.6",
    "svg-transform-loader": "^2.0.8",
    "svgo-loader": "^2.2.1",
    "vue-template-compiler": "^2.6.10"
